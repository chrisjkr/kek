extends base
block vars
    - var title = 'Champion'
block body
    script(src='/static/scripts/singleChampionRanking.js' async)
    include ./includes/navbar.pug
        .container.layout
          .row.champions-table-row
              .col-md-12.role-centered
                  h1#header
              .col-md-12
                .table-responsive
                  table.mdl-data-table.mdl-js-data-table.champions-table.champions-ranking-table
                      thead
                          tr
                              th #
                              th.mdl-data-table__cell--non-numeric Name
                              th.mdl-data-table__cell--non-numeric Region
                              th Points
                              th Division
                      tbody#singleChampion